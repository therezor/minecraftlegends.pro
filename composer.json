{
    "name": "therezor/discuss",
    "type": "project",
    "description": "Discussion engine.",
    "keywords": ["discussion", "laravel"],
    "license": "MIT",
    "require": {
        "php": "^8.1.0",
        "artesaos/seotools": "^1.0",
        "cms-multi/filament-clear-cache": "^1.0",
        "codex-team/editor.js": "^2.0",
        "diglactic/laravel-breadcrumbs": "^8.0",
        "embed/embed": "^4.4",
        "filament/filament": "^2.17",
        "guzzlehttp/guzzle": "^7.2",
        "hollyit/filament-static-assets": "^0.1.4",
        "intervention/image": "^2.7",
        "jackiedo/dotenv-editor": "^2.1",
        "kris/laravel-form-builder": "^1.51",
        "laravel/framework": "^9.19",
        "laravel/tinker": "^2.7",
        "league/glide": "^2.2",
        "mews/purifier": "^3.3",
        "mohamedsabil83/filament-forms-tinyeditor": "^1.7",
        "rahmanramsi/filament-editorjs": "^1.0",
        "ryangjchandler/filament-navigation": "^0.5.0",
        "watson/sitemap": "^5.0",
        "wiebenieuwenhuis/filament-char-counter": "^1.0",
        "z3d0x/filament-fabricator": "^1.1"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.7",
        "barryvdh/laravel-ide-helper": "^2.12",
        "fakerphp/faker": "^1.9.1",
        "laravel/breeze": "^1.13",
        "laravel/pint": "^1.0",
        "laravel/sail": "^1.0.1",
        "mockery/mockery": "^1.4.4",
        "nunomaduro/collision": "^6.1",
        "nunomaduro/larastan": "^2.2",
        "phpunit/phpunit": "^9.5.10",
        "spatie/laravel-ignition": "^1.0",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/",
            "Themes\\": "resources/views/themes/"
        },
        "files": [
            "app/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "php vendor/bin/phpstan analyse --memory-limit=-1"
        ],
        "check-style":[
            "php vendor/bin/phpcs --standard=phpcs.xml app -n -p; if [ $? -eq 1 ]; then exit 0; fi"
        ],
        "fix-style": [
            "php vendor/bin/phpcbf --standard=PSR12 --standard=phpcs.xml app -n -p; if [ $? -eq 1 ]; then exit 0; fi"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force",
            "@php artisan filament:upgrade"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": [
            ]
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
