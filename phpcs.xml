<?xml version="1.0"?>
<ruleset name="PHP_CodeSniffer">
    <!-- Forbid some functions -->
    <rule ref="Generic.PHP.ForbiddenFunctions">
      <properties>
        <property name="forbiddenFunctions" type="array" value="sizeof=>count,delete=>unset,print=>echo,is_null=>null,create_function=>null,dd=>null,env=>null,die=>null,exit=>null"/>
      </properties>
    </rule>
</ruleset>
